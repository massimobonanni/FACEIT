<Window x:Class="FACEIT.Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FACEIT.Client.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Image x:Name="FrameImage" Margin="10" Grid.Row="0" Grid.Column="0" Source="{Binding CameraFrame}"></Image>

        <Image x:Name="CapturedImage" Margin="10" Grid.Row="0" Grid.Column="1" Source="{Binding CapturedImage}" />

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button Command="{Binding CaptureImageCommand}" Margin="10">Capture Image</Button>
        </StackPanel>
    </Grid>
</Window>
